<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Music-User</title>
        <link rel="icon" href="./images/logo.png">
        <link rel="stylesheet" media="screen" href="/style/payment.css">
        <script type="text/javascript" src="/script/payment.js" defer></script>
        <!-- Font Awesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
        <!-- MDB -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css" rel="stylesheet" />
        <style>
            .btn-search-navbar {
                padding: .375rem .75rem;
            }
            .image-item {
                width: 60%;
                border-radius: 15px;
                padding: 10 5;
            }
            .image-item-right {
                width: 100%;
                height: 15%;
                border-radius: 15px;
                padding: 10 10;
            }
            @media screen and (max-width: 768px) {
                .image-item {
                    width: 100%;
                    border-radius: 15px;
                    padding: 10 5;
                }
                .image-item-right {
                width: 100%;
                height: 5%;
                border-radius: 15px;
                padding: 10 10;
            }
            }
            .truncate-text {
                text-overflow: ellipsis;
                overflow: hidden;
                white-space: nowrap;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #457373;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="https://i.pinimg.com/originals/f8/9a/e1/f89ae15e25a2130d2811cedbe03bdefa.png" height="50" alt="" loading="lazy" />
                </a>
                
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
          
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link " href="/">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/artist">ARTIST</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">CONTACT</a>
                        </li>
                    </ul>
          
                    <div class="d-flex input-group w-auto" style="padding: 10px 10px">
                        <button class="btn btn-light btn-search-navbar" type="button">
                            <i class="fas fa-search" aria-hidden="true"></i>
                        </button>
                        <input type="text" class="form-control" name="search" placeholder=" Artists , Musics" aria-label="Search" />
                    </div>
                    <% if(!currentUser) {%>
                        <div class="d-flex w-auto">
                            <a href="/login"><button type="button" class="btn btn-outline-light btn-rounded btn-sm" data-mdb-ripple-color="dark" >Log in</button></a>
                            <span class="text-white" style="padding: 0 10">|</span>
                            <a href="/register"><button type="button" class="btn btn-outline-light btn-rounded btn-sm" data-mdb-ripple-color="dark" >Sign up</button></a>
                        </div>
                        <% } else { %> 
                        <div class="d-flex w-auto">
                            <span class="text-white" style="padding: 0 10"><%= currentUser.username %></span>
                            <div class="dropdown">
                                <button type="button" class="btn btn-light btn-floating btn-sm" data-mdb-ripple-color="dark" id="dropdownMenuButton" data-mdb-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-alt"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item" href="/profile">
                                            <i class="fas fa-clipboard-list" style="padding-right: 10;"></i> Edit Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/favorite/<%= currentUser.username %>">
                                            <i class="fas fa-record-vinyl" style="padding-right: 10;"></i> Playlist
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/logout">
                                            <i class="fas fa-door-open" style="padding-right: 10;" ></i> Log out
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
          </nav>        